{
  "manifest_version": 3,
  "name": "Tailor",
  "version": "1.0",
  "description": "Auto-tailor resume and cover letter for job applications",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_title": "Tailor",
    "default_popup": "sidepanel.html"
  },
  "background": { "service_worker": "background.js" },
  "content_scripts": [
    {
      "matches": [
        "*://*.linkedin.com/*",
        "*://*.indeed.com/*",
        "*://*.greenhouse.io/*",
        "*://*.lever.co/*",
        "*://boards.greenhouse.io/*"
      ],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
